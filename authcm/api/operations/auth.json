      "x-swagger-router-controller": {"$ref": "#/components/controller"},
      "operationId": "login",
      "description": "用户登录。需要提供身份的凭证。完成之后返回 token",
      "tags": ["auth"],
      "parameters": [
        {"$ref": "../refs.json#/parameters/api-key"},
        {"$ref": "../refs.json#/parameters/credentials"}
      ],
      "responses": {
        "200": {"$ref": "../refs.json#/responses/SignupSuccess"}
      }
    }
  },

  "login": {
    "post": {
      "x-swagger-router-controller": {"$ref": "#/components/controller"},
      "operationId": "signup",
      "description": "用户注册。需要提供身份的凭证",
      "tags": ["auth"],
      "parameters": [
        {"$ref": "../refs.json#/parameters/api-key"},
        {"$ref": "../refs.json#/parameters/credentials"}
      ],
      "responses": {
        "200": {"$ref": "../refs.json#/responses/LoginSuccess"}
      }
    }
  },

  "refresh": {
    "post": {
      "x-swagger-router-controller": {"$ref": "#/components/controller"},
