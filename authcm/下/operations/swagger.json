{
  "swagger": "2.0",
  "info": {
    "title": "身份验证 API",
    "description": "用于用户登录与注册",
    "version": "1.0"
  },
  "produces": ["application/json"],
  "basePath": "/",
  "security": [
    {
      "cmjwt": []
    }
  ],
  "parameters": {
    "apiKey": {
      "name": "cm-api-key",
      "description": "平台发行的 API_KEY",
      "in": "header",
      "type": "string",
      "required": true
    },
    "credentials": {
      "name": "credentials",
      "in": "body",
      "description": "凭证信息",
      "required": true,
      "schema": {
        "$ref": "#/definitions/Credential"
      }
    }
  },
  "paths": {
    "/auth/login": {
      "post": {
        "x-swagger-router-controller": "user",
        "operationId": "login",
        "description": "用户登录。需要提供身份的凭证。完成之后返回 token。",
        "tags": ["auth"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          },
          {
            "$ref": "#/parameters/credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "x-swagger-router-controller": "user",
        "operationId": "signup",
        "description": "用户注册。需要提供身份的凭证。完成之后返回 token。",
        "tags": ["auth"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          },
          {
            "$ref": "#/parameters/credentials"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/Success"
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "x-swagger-router-controller": "user",
        "operationId": "find",
        "description": "获得全部用户",
        "tags": ["resource"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          }
        }
      },
      "post": {
        "x-swagger-router-controller": "user",
        "operationId": "create",
        "description": "新增用户",
        "tags": ["resource"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          },
          {
            "name": "data",
            "in": "body",
            "description": "用户信息",
            "schema": {
              "$ref": "#/definitions/Credential"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "x-swagger-router-controller": "user",
        "operationId": "findOne",
        "description": "获取用户详细信息",
        "tags": ["resource"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "put": {
        "x-swagger-router-controller": "user",
        "operationId": "update",
        "description": "更新用户信息",
        "tags": ["resource"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "data",
            "in": "body",
            "description": "用户信息",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      },
      "delete": {
        "x-swagger-router-controller": "user",
        "operationId": "destroy",
        "description": "删除用户",
        "tags": ["resource"],
        "parameters": [
          {
            "$ref": "#/parameters/apiKey"
          },
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "properties": {
        "id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        }
      }
    },
    "Credential": {
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Success": {
      "properties": {
        "userId": {
          "type": "string"
        },
        "token": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "cmjwt": {
      "type": "apiKey",
      "name": "cm-api-key",
      "in": "header"
    }
  }
}
